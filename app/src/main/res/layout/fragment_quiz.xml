<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.longtruong.cs273.ltruong58.cs273superheroes.QuizActivityFragment"
    tools:showIn="@layout/activity_quiz"
    android:orientation="vertical">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionNumberTextView"
        android:foregroundGravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/superHeroImageView"
        android:foregroundGravity="center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_weight="8"
        android:layout_margin="0dp" />

    <TextView
        android:text="@string/guess_superhero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guessHeroTextView"
        android:foregroundGravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="center_horizontal"
        android:id="@+id/row1LinearLayout"
        android:layout_weight="1">

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            style="@android:style/Widget.Material.Button.Colored"
            android:textSize="14sp" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            style="@android:style/Widget.Material.Button.Colored" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="center_horizontal"
        android:id="@+id/row2LinearLayout"
        android:layout_weight="1">

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            style="@android:style/Widget.Material.Button.Colored" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            style="@android:style/Widget.Material.Button.Colored" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/answerTextView"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="24sp" />

</LinearLayout>
